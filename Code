#JavaScript Code

const resultBox = document.getElementById("result");
let html5QrCode;

function startScanner() {
  html5QrCode = new Html5Qrcode("reader");

  html5QrCode.start(
    { facingMode: "environment" },
    { fps: 10, qrbox: 250 },
    qrCodeMessage => {
      html5QrCode.stop(); // Stop scanner after reading
      displayResult(qrCodeMessage);
    },
    errorMessage => {
      // Ignore scanning errors
    }
  ).catch(err => {
    resultBox.innerHTML = `âŒ Error: ${err}`;
  });
}

function displayResult(msg) {
  resultBox.innerHTML = `ğŸ“¦ <strong>Scanned:</strong> ${msg}`;

  // If it's a URL, add clickable link
  if (isValidURL(msg)) {
    resultBox.innerHTML += `<br><a href="${msg}" target="_blank" class="link-btn">ğŸŒ Open Link</a>`;
  }
}

function isValidURL(str) {
  try {
    new URL(str);
    return true;
  } catch (e) {
    return false;
  }
}

function resetScanner() {
  resultBox.innerHTML = "Scan a QR code to see the result here";
  startScanner();
}

startScanner();
